<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InventoryApplication.SalesReport">
   <center>
      <TableView fx:id="salesTable">
        <columns>
          <TableColumn fx:id="saleId" text="Sale ID" />
          <TableColumn fx:id="saleDate" minWidth="150.0" text="Sale Date" />
          <TableColumn fx:id="productName" minWidth="150.0" text="Product Name" />
          <TableColumn fx:id="quantityBought" minWidth="150.0" text="Quantity Bought" />
          <TableColumn fx:id="unitPrice" minWidth="150.0" text="Unit Price" />
          <TableColumn fx:id="totalAmount" minWidth="150.0" text="Total Amount" />
          <TableColumn fx:id="customerId" minWidth="150.0" text="Customer ID" />
        </columns>
      </TableView>
   </center>
</BorderPane>
